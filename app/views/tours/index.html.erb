<% provide(:title, t(".title")) %>
<div class="home-bg position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4 font-weight-normal"><%= t(".brand") %></h1>
    <p class="lead font-weight-normal"><%= t(".introduction") %></p>
  </div>
</div>
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= search_form_for @search do |f| %>
          <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12 p-1">
              <%= f.text_field :title_cont, class: "form-control",
                placeholder: t(".tourname") %>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12 p-1">
              <%= f.number_field :price_gteq, class: "form-control",
                placeholder: t(".pricestart") %>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-12 p-1">
              <%= f.number_field :price_lteq, class: "form-control", min: 1,
                placeholder: t(".priceand") %>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12 p-1">
            <%= f.number_field :num_people_eq, class: "form-control",
              placeholder: t(".people") %>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12 p-1">
              <%= f.collection_select :category_id_eq, Category.all, :id, :name,
              {include_blank: t(".category")}, {class: "form-control"} %>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12 p-1">
              <%= f.submit t(".search"), class: "btn btn-outline-primary"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <%= render @tours %>
    </div>
    <div class="d-flex justify-content-center">
      <%= will_paginate @tours %>
    </div>
  </div>
</div>
