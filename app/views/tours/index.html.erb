<% provide(:title, t(".title")) %>
<div class="home-bg position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal"><%= t(".brand") %></h1>
        <p class="lead font-weight-normal"><%= t(".introduction") %></p>
        <%= link_to t(".signup"), signup_path, class: "btn btn-primary" %>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-1 temp_col"></div>
    <div class="col-lg-11"></div>
    <div class="col-lg-12">
      <!-- Offers Grid -->
      <%= search_form_for @q, html: {class: "row"} do |f|%>
        <div class="col-sm-12">
          <%= f.search_field :title_or_description_cont, class: "form-control",
            placeholder: t(".title_or_description") %>
        </div>
        <div class="col-sm-6">
          <%= f.label t(".from_date") %>
          <%= f.search_field :tour_start_gt, class: "form-control", type: "date" %>
        </div>
        <div class="col-sm-6">
          <%= f.label t(".to_date") %>
          <%= f.search_field :tour_finish_lt, class: "form-control", type: "date" %>
        </div>
        <div class="col-sm-6">
          <%= f.search_field :price_gt, class: "form-control", placeholder: t(".price_greater_than") %>
        </div>
        <div class="col-sm-6">
          <%= f.search_field :price_lt, class: "form-control", placeholder: t(".price_less_than") %>
        </div>
        <div class="col-sm-12">
          <%= f.submit t(".search"), class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="offers_grid">
        <!-- Offers Item -->
        <%= render @tours %>
        <%= will_paginate @tours %>
      </div>
    </div>
  </div>
</div>
