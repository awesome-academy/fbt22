<% provide(:title, t(".title")) %>
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal"><%= t(".brand") %></h1>
        <p class="lead font-weight-normal"><%= t(".introduction") %></p>
        <%= link_to t(".signup"), signup_path, class: "btn btn-primary" %>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-1 temp_col"></div>
    <div class="col-lg-11"></div>
    <div class="col-lg-12">
      <!-- Offers Grid -->
      <div class="offers_grid">
        <!-- Offers Item -->
        <div class="offers_item rating_3">
          <div class="row">
            <div class="col-lg-1 temp_col"></div>
            <div class="col-lg-3 col-1680-4">
              <div class="offers_image_container">
                <div class="offers_image_background" style=""></div>
                <div class="offer_name"><a href=""><%= t(".name") %></a></div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="offers_content">
                <div class="offers_price"><%= t(".price") %>
                  <span><%= t(".days") %></span>
                </div>
                <div class="rating_r rating_r_3 offers_rating" data-rating="3">
                   <i></i>
                    <i></i>
                    <i></i>
                    <i></i>
                </div>
                <p class="offers_text"><%= t(".description") %></p>
                <div class="offers_icons">
                  <ul class="offers_icons_list">
                     <li class="offers_icons_item"><img src="" alt=""></li>
                    <li class="offers_icons_item"><img src="" alt=""></li>
                    <li class="offers_icons_item"><img src="" alt=""></li>
                    <li class="offers_icons_item"><img src="" alt=""></li>
                  </ul>
                </div>
                <div class="button book_button">
                  <a href="#"><%= t(".book") %></a>
                </div>
                <div class="offer_reviews">
                  <div class="offer_reviews_content">
                    <div class="offer_reviews_title">
                      <%= t(".review_content") %>
                    </div>
                    <div class="offer_reviews_subtitle">
                      <%= t(".review_count") %>
                    </div>
                  </div>
                  <div class="offer_reviews_rating text-center">
                    <%= t(".rating") %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
