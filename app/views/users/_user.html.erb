<li>
  <%
    if user.picture?
      src = user.picture.url
    else
      src = Settings.app.user.none_avatar
    end 
  %>
  <%= image_tag src, size: Settings.app.user.avatar_size_list %>
  <%= link_to user.lastname, user %>
  <% if current_user.role == Settings.app.user.admin && !current_user?(user) %>
    | <%= link_to t(".delete"), user, method: :delete,
        data: { confirm: t(".you_sure") } %>
  <% end %>
</li>
