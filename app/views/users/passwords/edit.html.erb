<% provide(:title, t(".title")) %>
<h1 class="text-center"><%= t(".title") %></h1>
<div class="container">
  <div class="col-md-12">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
       html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, t(".new") %><br />
        <% if @minimum_password_length %>
          <em><%= t(".minimum", count: @minimum_password_length) %></em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true,
          autocomplete: t(".newpwd"), class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t(".confirm") %><br />
        <%= f.password_field :password_confirmation, autocomplete: t(".offauto"),
          class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".submit"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
